@model WebApplication1.Models.Identity.ApplicationUser
@{
    ViewData["Title"] = "Konto użytkownika";
}

<div class="container py-4">
    <h2 class="mb-4"><i class="bi bi-person-circle me-2"></i>Konto użytkownika</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Numer telefonu:</dt>
                <dd class="col-sm-8">@Model.PhoneNumber ?? "<span class='text-muted'>Nie ustawiono</span>"</dd>

                <dt class="col-sm-4">Dwuskładnikowe uwierzytelnianie:</dt>
                <dd class="col-sm-8">@(Model.TwoFactorEnabled ? "Tak" : "Nie")</dd>

                <dt class="col-sm-4">Google ID:</dt>
                <dd class="col-sm-8">@Model.GoogleId ?? "<span class='text-muted'>Brak</span>"</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-end gap-2">
            <a href="/Account/Edit" class="btn btn-outline-primary">Edytuj dane</a>
            <a href="/Account/ChangePassword" class="btn btn-outline-secondary">Zmień hasło</a>
        </div>
    </div>
</div>
